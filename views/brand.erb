<div class="row">
  <div class="col-md-6">
    <h1>Brands</h1>
    <h5><%= @brand_message %></h5>
    <ul>
      <% Brand.all.each do |brand| %>
        <h5><a href="/brand/<%= brand.id %>"><%= brand.name %></a></h5>
      <% end %>
    </ul>
  </div>
  <!-- form -->
  <div class="col-md-6">
    <h3>Add a Brand</h3>
    <br>
    <div>
      <form class="form-group" action="/brands" method="post">
        <label for="brand-name">Enter a Brand Name</label>
        <input class="form-control" type="text" name="brand-name">
        <br>
        <label for="brand-price">Enter a Brand price</label>
        <input class="form-control" type="text" name="brand-price" placeholder="enter number to the 100th place">
        <br>

        <button type="submit" class="btn btn-info">Add New Brand</button>
      </form>
    </div>
  </div>
</div>
